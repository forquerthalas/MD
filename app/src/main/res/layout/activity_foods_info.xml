<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_foods_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:visibility="visible"
        android:id="@+id/toolBar"
        android:background="@drawable/shape_bag"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:layout_weight="2"
            android:background="#ffffff"
            android:padding="5dp">

            <TextView
                android:id="@+id/shoppingPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/shopping_cart"
                android:textColor="#8e8686"
                android:textSize="18dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_goToPay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/c"
            android:gravity="center"
            android:text="去结算"
            android:textColor="#ffffff"
            android:textSize="16dp" />

    </LinearLayout>
    <ImageView
        android:visibility="visible"
        android:layout_marginBottom="10dp"
        android:id="@+id/shopping_cart"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:src="@drawable/cart" />
    <TextView
        android:layout_marginLeft="55dp"
        android:layout_marginBottom="45dp"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:id="@+id/tv_cartNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_shopping_cart"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="8dp" />

    <com.yibai.administrator.md.widget.RecyclerGallery
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
