<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="520dp">

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="520dp">


    <ImageView

        android:id="@+id/iv_icon_goodsInfo"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@drawable/ceshi"
        />

    <ImageView
        android:id="@+id/iv_back_goodsInfo"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/back_left_white"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <ImageView
        android:id="@+id/iv_share_goodsInfo"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/share_"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <TextView
        android:id="@+id/tv_name_goodsInfo"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/iv_icon_goodsInfo"
        android:text="闭月羞花"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_monthCount_goodsInfo"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/tv_name_goodsInfo"
        android:text="月售17"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_price_goodsInfo"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/tv_monthCount_goodsInfo"
        android:text="￥5"
        android:textColor="@color/red"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_below="@+id/tv_monthCount_goodsInfo"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_width="100dp"
        android:layout_height="45dp">
        <LinearLayout
            android:id="@+id/ll_buy"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/reduce"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/jian"
                />

            <TextView
                android:id="@+id/shoppingNum"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:maxLength="10"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <ImageView
                android:src="@drawable/jia"
                android:id="@+id/increase"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center"
                />
        </LinearLayout>
        <ImageView
            android:visibility="visible"
            android:src="@drawable/addcart"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:id="@+id/imageView_addcart" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_1"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ll_1"
        android:background="@color/c"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <TextView
        android:id="@+id/tv_2"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_1"
        android:layout_marginLeft="15dp"
        android:text="商品评价"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_3"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:id="@+id/ll_haoPing"
            android:gravity="center"
            android:layout_gravity="left"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/zan"
                android:layout_width="15dp"
                android:layout_height="15dp" />
            <TextView
                android:id="@+id/tv_haoPing_goodsInfo"
                android:layout_marginLeft="5dp"
                android:text="7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/textView" />

        <LinearLayout
            android:id="@+id/ll_chaPing"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="2"
                android:id="@+id/tv_chaPing_goodsInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginLeft="5dp"
                android:src="@drawable/chaping"
                android:layout_width="15dp"
                android:layout_height="15dp" />
        </LinearLayout>
    </LinearLayout>

        <ProgressBar
            android:visibility="visible"
            android:id="@+id/contentLoadingProgressBar"
            android:layout_marginTop="15dp"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:progress="50"
            android:progressDrawable="@drawable/progress"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/ll_3"
            android:layout_alignLeft="@+id/ll_3"
            android:layout_alignStart="@+id/ll_3"
            />

    <LinearLayout
        android:id="@+id/ll_2"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tv_noPingJia"
            android:text="好评度"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_pingJia_goodsInfo"
            android:text="50%"
            android:textColor="@color/red"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </RelativeLayout>

</LinearLayout>
