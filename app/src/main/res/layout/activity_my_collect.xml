<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_collect"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yibai.administrator.md.activity.MyCollectActivity">
    <LinearLayout
        android:id="@+id/ll_title"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_back_collect"
           android:padding="20dp"
            android:src="@drawable/back_left"
            android:layout_width="50dp"
            android:layout_height="60dp" />
        <TextView
            android:text="我的收藏"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textColor="@color/darkblack"
            />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/zf"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:id="@+id/imageView3" />
        <TextView
            android:text="您还没有收藏的商家哦~"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    </LinearLayout>

   <LinearLayout
       android:orientation="vertical"
       android:background="@color/nearby_grey"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <TextView
            android:background="@color/nearby_grey"
           android:layout_width="match_parent"
           android:layout_height="1dp" />
       <TextView
           android:paddingLeft="20dp"
           android:gravity="center_vertical"
           android:text="当前区域商家"
           android:background="@color/address"
           android:layout_width="match_parent"
           android:layout_height="40dp" />
       <ListView
           android:id="@+id/lv_collect"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
       </ListView>
   </LinearLayout>
</LinearLayout>
