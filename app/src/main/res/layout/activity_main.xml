<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <TextView
        android:background="@color/nearby_grey"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </android.support.v4.view.ViewPager>

    <RadioGroup
        android:background="@color/white"
        android:id="@+id/radioGroup"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <com.lost.administrator.md.widget.MyRadioButton
            android:id="@+id/rb_home"

            app:drawableTop="@drawable/sel_rb_home"
            app:drawableTopHeight="9dp"
            app:drawableTopWidth="9dp"
            android:text="首页"
            style="@style/btn_style"  />

        <com.lost.administrator.md.widget.MyRadioButton
            android:id="@+id/rb_order"
            app:drawableTop="@drawable/sel_rb_order"
            app:drawableTopHeight="9dp"
            app:drawableTopWidth="7dp"
            android:text="订单"
            style="@style/btn_style"  />
        <com.lost.administrator.md.widget.MyRadioButton
            android:id="@+id/rb_mine"
            app:drawableTop="@drawable/sel_rb_mine"
            app:drawableTopHeight="9dp"
            app:drawableTopWidth="8dp"
            android:text="我的"
            style="@style/btn_style"  />

    </RadioGroup>


</LinearLayout>
